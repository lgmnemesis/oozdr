{
  "hosting": [
    {
      "target": "app",
      "public": "www",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "sitemap.txt",
          "destination": "/sitemap.txt"
        },
        {
          "source": "robots.txt",
          "destination": "/robots.txt"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(js|css|jpg|jpeg|gif|png|svg)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31557600, s-maxage=31557600"
            }
          ]
        }
      ]
    },
    {
      "target": "staging",
      "public": "staging",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "sitemap.txt",
          "destination": "/sitemap.txt"
        },
        {
          "source": "robots.txt",
          "destination": "/robots.txt"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(js|css|jpg|jpeg|gif|png|svg)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31557600, s-maxage=31557600"
            }
          ]
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true
    }
  }
}
