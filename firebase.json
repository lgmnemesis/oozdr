{
  "hosting": [
    {
      "target": "app",
      "public": "www",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "sitemap.txt",
          "destination": "/sitemap.txt"
        },
        {
          "source": "robots.txt",
          "destination": "/robots.txt"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [{
        "source": "**/*.@(js|css|jpg|jpeg|gif|png|svg)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "public, max-age=31557600, s-maxage=31557600"
        } ]
      }]
    }
  ]
}